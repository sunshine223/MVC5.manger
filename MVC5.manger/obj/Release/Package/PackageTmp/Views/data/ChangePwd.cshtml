
@{
    ViewBag.Title = "ChangePwd";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>个人信息</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link href="~/022/common/layui/css/layui.css" rel="stylesheet" />
    <link href="~/022/common/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/022/common/global.css" rel="stylesheet" />
    <style type="text/css">
        * {
            margin: 0 auto;
            padding: 0;
            border: 0;
        }

        .box {
            width: 40%;
            margin-top: 20px;
            margin: 0 auto;
        }

        #titel {
            font-size: 1.5em;
            width: 50%;
            text-align: center;
            margin-top: 30px;
        }

        #textss {
            margin-top: 40px;
        }

        input{
            width:300px;
        }

        .layui1 {
            display: block;
            width: 300px;
            margin-left: 120px;
        }

        .layui-btn1 {
            display: inline-block;
            height: 38px;
            line-height: 38px;
            padding: 0 18px;
            background-color: #009688;
            color: #fff;
            white-space: nowrap;
            text-align: center;
            border: none;
            border-radius: 2px;
            cursor: pointer;
            opacity: .9;
        }

        .remove {
            height: 38px;
            line-height: 38px;
            width: 80px;
            border: 1px solid #C9C9C9;
            background-color: #fff;
            color: #555;
            margin-left: 132px;
        }
    </style>
</head>
<body>
    <div class="box">
        <div class="larry-personal">
            <header class="larry-personal-tit" id="titel">
                <p>修改密码</p>
            </header><!-- /header -->
            <div class="larry-personal-body clearfix changepwd" id="textss">
                <form class="layui-form col-lg-4" id="pwdss">
                    <div class="layui-form-item">
                        <label class="layui-form-label">用户Id</label>
                        <div class="layui-input-block">
                            <input type="text" id="userID" name="userID" class="layui-input layui-disabled" readonly="">
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">用户名</label>
                        <div class="layui-input-block">
                            <input type="text" id="userName" class="layui-input layui-disabled" readonly="">
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">旧密码</label>
                        <div class="layui-input-block">
                            <input type="password" autocomplete="off" id="uesrPwd" class="layui-input" onclick="onblurs()" placeholder="请输入旧密码">
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">新密码</label>
                        <div class="layui-input-block">
                            <input type="password" id="newPwd1" autocomplete="off" class="layui-input" value="" placeholder="请输入新密码">
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">确认密码</label>
                        <div class="layui-input-block">
                            <input type="password" name="userPwd" id="newPwd2" autocomplete="off" class="layui-input" value="" placeholder="请输入确认新密码">
                        </div>
                    </div>



                </form>
            </div>
        </div>
        <div class="layui1">
            <button class="layui-btn1" type="button" onclick="btn_ok()">立即提交</button>
            <button type="button" onclick="remove()" class="remove">重置</button>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/022/common/layui/layui.js"></script>
    <script src="~/Scripts/data/changePwd.js"></script>

</body>
</html>
