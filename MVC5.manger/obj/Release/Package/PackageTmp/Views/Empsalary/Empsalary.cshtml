
@{
    ViewBag.Title ="Empsalary";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>表格</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link href="~/022/common/layui/css/layui.css" rel="stylesheet" />
    <link href="~/style/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/style/tables.css" rel="stylesheet" />
</head>
<body>
    <div class="box">
        <div class="nav">
            <div id="texts"><a>薪资管理</a></div>
            <div id="inputs">
                <form id="salary">
                    <span>
                        <input type="text" class="searchs" style="border:1px solid #808080; height:30px;" placeholder="请输入姓名">
                        <button type="button" class="btn btn-success" onclick="search()">搜索</button>
                        <button type="button" class="btn btn-warning" onclick="updet()">修改</button>
                    </span>
                </form>
            </div>
        </div>
        <div class="tabls">
            <table class="table table-bordered" id="tb"></table>

        </div>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-hidden="true" aria-labelledby="myModalLabel">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">修改薪资</h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal" role="form" id="menuForm">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">用户ID</label>
                                <div class="col-sm-10">
                                    <input class="layui-input layui-disabled" name="empId" id="empId" readonly="" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">用户名</label>
                                <div class="col-sm-10">
                                    <input class="layui-input layui-disabled" id="empName" readonly="" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">奖金</label>
                                <div class="col-sm-10">
                                    <input class="form-control" name="empBonus" id="empBonus" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">工资</label>
                                <div class="col-sm-10">
                                    <input class="form-control" name="empSalary" id="empSalary" />
                                </div>
                            </div>

                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" onclick="cancel()">取消</button>
                        <button type="button" class="btn btn-primary" onclick="saveMenu()">保存</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap/js/moment-with-locales.min.js"></script>
    <script src="~/Scripts/bootstrap/js/bootstrap-table.min.js"></script>
    <script src="~/Scripts/bootstrap/js/bootstrap-table-zh-CN.js"></script>
    <script src="~/Scripts/bootstrap/js/bootstrapValidator.min.js"></script>
    <script src="~/Scripts/bootstrap/js/bootstrapValidator.min.zh_CN.js"></script>
    <script src="~/Scripts/data/EmpSalary.js"></script>
</body>
</html>


