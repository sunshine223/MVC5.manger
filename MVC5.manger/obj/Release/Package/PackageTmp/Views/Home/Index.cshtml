
@{
    ViewBag.Title = "Loging";
}

<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>用户登录界面</title>
    <link href="http://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/022/loging/css/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/022/loging/css/loging.css" rel="stylesheet" />
    <link href="~/022/loging/css/htmleaf-demo.css" rel="stylesheet" />
</head>
<body>
    <div class="htmleaf-container">
        <div class="demo form-bg">
            <div class="container">
                <div class="row">
                    <div class="col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6">
                        <form class="form-horizontal">
                            <div class="heading">OA办公系统</div>
                            <div class="form-group">
                                <i class="fa fa-user"></i><input type="text" class="form-control" placeholder="Username" id="name">
                            </div>
                            <div class="form-group">
                                <i class="fa fa-lock"></i><input id="pwd" type="password" class="form-control" placeholder="Password" />
                            </div>
                            <div class="form-group">
                                <button type="button" class="btn btn-default" onclick="loging()"><i class="fa fa-arrow-right"></i></button>
                                <span>Don't have an account? <a href="#" class="create_account" onclick="register()">Sign up</a></span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/data/loging.js"></script>
</body>
</html>