
@{
    ViewBag.Title = "Index";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>info</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="wnameth=device-wnameth, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">

    <link href="~/style/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/style/person.css" rel="stylesheet" />
    <link href="~/022/common/layui/css/layui.css" rel="stylesheet" />
    <style type="text/css">
        input {
            width:200px;
            height:30px;
        }
    </style>
</head>
<body>
    <div class="box">
        <header class="larry-personal-tit" id="titel">
            <p>录入员工信息</p>
        </header>
        <div class="larry-personal-body" name="textss">
            <form class="form-horizontal" role="form" id="addForm">
                <div class="row">
                    <div class="col-xs-6">

                        I&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;D:&nbsp;&nbsp;&nbsp; <input type="text" name="empId" class="input-block-level">
                    </div>
                    <div class="col-xs-6">
                        姓&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;名:&nbsp;&nbsp;&nbsp;<input type="text" name="empName" class="input-block-level">
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        职&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;位:&nbsp;&nbsp;&nbsp;<input type="text" name="empPosition" class=" input-block-level">
                    </div>
                    <div class="col-xs-6">
                        empHrId&nbsp;&nbsp;&nbsp;&nbsp; <input type="text" name="empHrId" class="input-block-level">
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        工&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;资:&nbsp;&nbsp;&nbsp; <input type="text" name="empSalary" class="input-block-level">
                    </div>
                    <div class="col-xs-6">
                        奖&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;金:<input type="text" autocomplete="off" name="empBonus" class=" input-block-level">
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        入职时间:&nbsp;&nbsp;&nbsp;<input type="datetime" name="empInDate" autocomplete="off" class="input-block-level">
                    </div>
                    <div class="col-xs-6">
                        deptId:&nbsp;&nbsp;&nbsp;<input type="text" name="deptId" autocomplete="off" class="input-block-level">
                    </div>
                </div>
            </form>
            <div class="row">
                <div class=".col-md-3 .col-md-offset-3">
                    <button class="btn btn-info" onclick="add()" style="margin-left:180px;">点击添加</button>
                </div>
            </div>
        </div>
      
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
   
    <script src="~/Scripts/data/addDept.js"></script>
</body>
</html>

